---
import Header from '../components/Header.astro'
import '../assets/style.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=undo" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>MathX</title>
  </head>
  <body>
    <Header />
    <div class="content">
      <button><a href="/"><span class="material-symbols-outlined">
        undo
        </span>
      </a></button>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  button {
    border: none;
    padding: 6px 10px;
    border-radius: .4rem;
    cursor: pointer;
    background-color: transparent;
  }
  button:hover {
    background-color: var(--brighter);
  }
  button span {
    color: var(--white);
  }
  .content {
    color: var(--white);
    display: flex;
    width: 70%;
    max-width: 700px;
    min-height: 100vh;
    flex-direction: column;
    align-items: flex-start;
    gap: 18px;
    min-height: 100vh;
    padding-bottom: 200px;
  }
  .content h1 {
    font-weight: 600;
    font-size: 1.5rem;
  }
  .content h2 {
    font-weight: 500;
    font-size: 1.3rem;
  }
  .content p {
    font-size: 1rem;
    font-weight: 300;
  }

  .content .markdown-alert {
    padding: 30px 40px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    border-radius: 0.5rem;
  }

  .markdown-alert-title {
    display: none;
  }

  .markdown-alert.markdown-alert-note {
    background-color: var(--brighter);
    border-radius: 0rem;
    border-left: 5px solid var(--def);
  }
  .markdown-alert-note::before {
    content: 'Definition';
    font-weight: 600;
  }
  .markdown-alert-tip::before {
    content: 'Satz';
    font-weight: 600;

  }
  .markdown-alert.markdown-alert-tip {
    background-color: var(--brighter);
    border-radius: 0rem;
    border-left: 5px solid var(--sec);
  }
  .markdown-alert-important::before {
    content: 'Aufgaben';
    font-weight: 600;

  }
  .markdown-alert.markdown-alert-important {
    background-color: var(--brighter);
    border-radius: 0rem;
    border-left: 5px solid var(--sec2);
</style>
